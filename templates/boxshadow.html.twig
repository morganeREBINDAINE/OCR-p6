{% extends 'base.html.twig' %}

{% block body %}
<div class="single-trick position-relative">
    {% if (app.flashes('success') is defined and app.flashes('success') is not empty)
        or (app.flashes('error') is defined and app.flashes('error') is not empty) %}
    <div class="modal show" id="flash">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    <div class="background-img"></div>
    <div class="trick">
        <div class="content">
            <div class="content-container">
                <div class="content-details">
                    {% block children %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
