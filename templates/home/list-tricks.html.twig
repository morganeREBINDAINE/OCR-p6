{% for trick in tricks %}
    <div class="col-sm col-trick">
        <div class="trick-card">
            <a href="{{ path('display_trick', {id: trick.id}) }}">
                <div class="trick-card-img" style="background-image:url(
                {% if trick.imageName is defined and trick.imageName is not empty %}{{ asset('images/tricks/' ~ trick.imageName) | imagine_filter('thumb') }}
                {% else %}{{ asset('images/placehold.jpg') | imagine_filter('thumb') }}{% endif %}
            )"></div>
            </a>
            <div class="row align-items-center trick-card-bottom">
                <div class="col-{% if app.user %}8{% else %}12{% endif %}">
                    <a href="{{ path('display_trick', {id: trick.id}) }}">{{ trick.name }}</a>
                </div>
                {% if app.user %}
                <div class="col-4">
                    <a href="{{path('edit_trick', {id: trick.id})}}"><i class="fas fa-pen"></i></a>
{#                    @todo traitement jquery pour ouvrir la modale#}
                    <a href="" data-toggle="modal" data-target="#deleteModal{{ trick.id }}"><i class="fas fa-trash-alt"></i></a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% include 'parts/delete-modal.html.twig' %}
{% endfor %}
