{% extends 'base.html.twig' %}

{% block body %}
    <div class="other-forms" id="login">
        <div class="container">
            <form method="post">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}

                <h1 class="h3 mb-4">Se connecter</h1>
                <label for="inputUsername">Pseudo</label>
                <input type="text" name="username" id="inputUsername" class="form-control" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-red" type="submit">
                    Envoyer
                </button>
                {% if error %}
                    <div class="mt-3 alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </form>
            <div class="links">
                <a href="{{ path('forgotten_password') }}">Mot de passe oubli√©</a> -
                <a href="{{ path('registration') }}">S'inscrire</a>

            </div>
        </div>
    </div>
{% endblock %}
