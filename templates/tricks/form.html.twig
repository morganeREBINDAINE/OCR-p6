{% extends 'boxshadow.html.twig' %}

{% block children %}
    <div class="trick-form">
        {{ form_start(form) }}
        <div class="content-img position-relative" style="background-image:url(/images/placehold.jpg)">
            <div class="content-img-name">
                {{ form_row(form.name) }}
            </div>
        </div>

        <div class="content-content">
            <div id="media">
                {% include 'tricks/list-images.html.twig' with {images: trick.images} %}
            </div>
            <img class="loader" src="{{ asset('images/loader.gif') }}" style="display: none">
            <button class="btn btn-success" id="add_imgs_btn">Ajouter des images</button>
            <div class="content-description">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
            </div>

            <div class="content-infos">
                {#            choose group             #}
            </div>

            <div class="hidden-field">
            {{ form_row(form.imagesFiles) }}
            </div>

            <button type="submit" class="btn btn-primary">Envoyer</button>
            {{ form_end(form) }}
        </div>
    </div>
    <script>
        var trickID = {{ trick.id }};
    </script>
{% endblock %}
